    </changeSet>

    <changeSet id="1.0.3" author="oleg.filatov">
        <createTable tableName="products">

            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="title" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="price" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="manufacturer_id" type="int"/>

        </createTable>
    </changeSet>

    <changeSet id="1.0.4" author="oleg.filatov">
        <addForeignKeyConstraint baseTableName="products"
                                 baseColumnNames="manufacturer_id"
                                 constraintName="fk_products_manufacturer"
                                 referencedTableName="manufacturers"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1.0.5" author="oleg.filatov">

        <insert tableName="products">
            <column name="title" value="Xbox Series X"/>
            <column name="price" value="1500"/>

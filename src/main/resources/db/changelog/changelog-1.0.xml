<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.1" author="oleg.filatov">
        <createTable tableName="manufacturers">

            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="title" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="address" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.2" author="oleg.filatov">

        <insert tableName="manufacturers">
            <column name="title" value="Microsoft"/>
            <column name="address" value="One Microsoft Way Redmond, WA 98052-6399 USA"/>
        </insert>

        <insert tableName="manufacturers">
            <column name="title" value="Nintendo"/>
            <column name="address" value="11-1 Hokotate-cho, Kamitoba, Minami-ku, Kyoto 601-8501, Japan."/>
        </insert>

        <insert tableName="manufacturers">
